
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#E0F7FA"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="My Nanodegree Apps!"

        android:layout_width="match_parent"

        android:layout_height="@dimen/abc_action_bar_default_height_material"

        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:height="@dimen/abc_action_bar_subtitle_top_margin_material"
        android:textSize="@dimen/abc_text_size_headline_material" />

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:background="#F08C35"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:longClickable="true"
        android:maxHeight="@dimen/abc_action_button_min_height_material"
        android:layout_marginBottom="16dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:text="SCORES APP"
        android:id="@+id/button2"
        android:layout_below="@+id/button"

        android:background="#F08C35"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:text="LIBRARY APP"
        android:id="@+id/button3"
        android:background="#F08C35"
        android:layout_gravity="center_horizontal"
        android:maxWidth="@dimen/abc_text_size_button_material"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:text="BUID IT BIGGER"
        android:id="@+id/button4"
        android:background="#F08C35"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:text="XYZ READER"
        android:id="@+id/button5"
        android:background="#F08C35"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:text="CAPSTONE:MY OWN APP"
        android:id="@+id/button6"
        android:background="#00BFA5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="64dp"
        android:layout_weight="1" />

</LinearLayout>
